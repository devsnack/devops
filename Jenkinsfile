pipeline {
    agent any
    
    stages {
        stage('Dev') {
            steps {
                echo "Deploying to DEVELOPMENT environment"
                echo "Stage: Dev"
                echo "This would deploy to dev servers"
            }
        }
        
        stage('Production') {
            steps {
                echo "Deploying to PRODUCTION environment"
                echo "Stage: Production"
                echo "This would deploy to production servers"
            }
        }
    }
}
